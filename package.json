{
  "name": "fullstack-ts-scaffold",
  "version": "1.0.0",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "author": {
    "name": "Annas RA"
  },
  "license": "MIT",
  "dependencies": {
    "cross-env": "^7.0.3",
    "inversify": "^6.0.1",
    "next": "^13.4.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.1.13"
  },
  "files": [
    "bin/*",
    "dist/*"
  ],
  "typings": "dist/index.d.ts",
  "scripts": {
    "dev": "nodemon",
    "build": "next build src/presentation/web && tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "lint-next": "next lint src/presentation/web",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "prepublish": "npm run build",
    "bundle": "pkg -C GZip ."
  },
  "devDependencies": {
    "@types/node": "20.5.0",
    "@types/react": "18.2.20",
    "autoprefixer": "^10.4.15",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1",
    "postcss": "^8.4.28",
    "tailwindcss": "^3.3.3",
    "tslint": "^6.1.3",
    "typescript": "^5.1.6"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "public/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "bundle"
  }
}
