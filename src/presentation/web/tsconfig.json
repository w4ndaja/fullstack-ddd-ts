{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./../../../.tsbuildinfo" /* Specify the path to .tsbuildinfo incremental compilation file. */,
    "target": "ES5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "experimentalDecorators": true /* Enable experimental support for legacy experimental decorators. */,
    "emitDecoratorMetadata": true /* Emit design-type metadata for decorated declarations in source files. */,
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./../../../src/",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "reflect-metadata"
    ] /* Specify type package names to be included without being referenced in a source file. */,
    "resolveJsonModule": true,
    "allowArbitraryExtensions": true /* Enable importing files with any extension, provided a declaration file is present. */,
    "allowJs": true,
    "removeComments": true /* Disable emitting comments. */,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true /* Ensure that casing is correct in imports. */,
    "strict": false,
    "strictFunctionTypes": false /* When assigning functions, check to ensure parameters and the return values are subtype-compatible. */,
    "strictBindCallApply": false /* Check that the arguments for 'bind', 'call', and 'apply' methods match the original function. */,
    "rootDir": "./../../../",
    "skipLibCheck": true
  },
  "include": [
    "next-env.d.ts",
    "../../../dist/presentation/web/.next/types/**/*.ts",
    "../../**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "swc": true,
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
